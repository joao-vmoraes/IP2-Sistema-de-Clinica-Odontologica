<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="clinica.view.UIController.MainController">

    <top>
        <!-- Menu Superior -->
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Cadastros">
                    <items>
                        <!-- Ação: loadCadastro deve ser implementada no MainController -->
                        <MenuItem mnemonicParsing="false" text="Novo Paciente" onAction="#loadCadastro"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Consultas">
                    <items>
                        <!-- Ação: loadPacienteList (já implementada) -->
                        <MenuItem mnemonicParsing="false" text="Ver Listagem" onAction="#loadPacienteList"/>
                        <MenuItem mnemonicParsing="false" text="Agendar Nova" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Sobre" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <!-- Esta área será substituída pelo conteúdo das telas filhas -->
        <VBox alignment="CENTER" BorderPane.alignment="CENTER" spacing="10">
            <children>
                <Label text="Sistema da Clínica Odontológica" style="-fx-font-size: 24px;"/>
                <Label text="Selecione uma opção no menu superior."/>
            </children>
        </VBox>
    </center>
</BorderPane>