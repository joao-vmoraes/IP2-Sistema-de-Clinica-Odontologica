<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinica.view.UIController.AgendamentoListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Agenda de Consultas" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="10.0">
        <children>
            <Label text="Pesquisar por CPF:" />
            <TextField fx:id="txtPesquisaCpf" prefWidth="200.0" promptText="Digite o CPF do paciente..." />
            <Button mnemonicParsing="false" onAction="#filtrarPorCpf" text="Pesquisar" />
            <Button mnemonicParsing="false" onAction="#atualizarLista" text="Limpar Filtro" />
        </children>
    </HBox>

    <TableView fx:id="tableViewAgendamentos" prefHeight="400.0" prefWidth="900.0">
        <columns>
            <TableColumn fx:id="colDataHora" prefWidth="130.0" text="Data/Hora" />
            <TableColumn fx:id="colPaciente" prefWidth="150.0" text="Paciente" />
            <TableColumn fx:id="colDentista" prefWidth="130.0" text="Dentista" />
            <TableColumn fx:id="colProcedimento" prefWidth="130.0" text="Procedimento" />
            <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
            <TableColumn fx:id="colFinanceiro" prefWidth="100.0" text="Financeiro" />
            <TableColumn fx:id="colAcoes" prefWidth="130.0" text="Ações" />
        </columns>
    </TableView>

    <Button mnemonicParsing="false" onAction="#atualizarLista" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: green; -fx-text-fill: white;" text="Atualizar Lista">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Button>
</VBox>
