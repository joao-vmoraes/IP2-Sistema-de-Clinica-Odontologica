<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinica.view.UIController.AgendamentoListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Agenda de Consultas" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <TableView fx:id="tableViewAgendamentos" prefHeight="400.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="colDataHora" prefWidth="140.0" text="Data/Hora" />
            <TableColumn fx:id="colPaciente" prefWidth="150.0" text="Paciente" />
            <TableColumn fx:id="colDentista" prefWidth="150.0" text="Dentista" />
            <TableColumn fx:id="colProcedimento" prefWidth="140.0" text="Procedimento" />
            <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
        </columns>
    </TableView>

    <Button mnemonicParsing="false" onAction="#atualizarLista" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Atualizar Lista">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Button>
</VBox>