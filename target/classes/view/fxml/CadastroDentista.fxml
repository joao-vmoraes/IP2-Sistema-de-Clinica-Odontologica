<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinica.view.UIController.CadastroDentistaController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="20.0" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label text="Novo Cadastro de Dentista">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>

                <TextField fx:id="txtNome" promptText="Nome Completo" />
                <TextField fx:id="txtCpf" promptText="CPF (000.000.000-00)" />
                <TextField fx:id="txtTelefone" promptText="Telefone" />
                <TextField fx:id="txtEmail" promptText="E-mail" />
                <TextField fx:id="txtEndereco" promptText="Endereço Residencial" />
                <TextField fx:id="txtEspecialidade" promptText="Especialidade" />

                <Label text="Grade de Disponibilidade" textFill="#666666">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <!-- AQUI É ONDE A MÁGICA ACONTECE -->
                <!-- Este container receberá a tabela gerada pelo Java -->
                <VBox fx:id="containerGradeHorarios" alignment="CENTER" prefHeight="300.0" prefWidth="400.0" style="-fx-border-color: #dddddd; -fx-border-radius: 5;" />
                
                <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#acaoSalvar" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="SALVAR CADASTRO">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>