<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinica.view.UIController.ProcedimentoListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 18px;" text="Procedimentos" />

    <TableView fx:id="tableViewProcedimentos" prefHeight="300.0" prefWidth="550.0">
        <columns>
            <TableColumn fx:id="colNome" prefWidth="117.60000228881836" text="Nome" />
            <TableColumn fx:id="colDesc" prefWidth="161.6000518798828" text="Descricao" />
         <TableColumn fx:id="colPreco" prefWidth="103.99993896484375" text="Preço" />
            <TableColumn fx:id="colTempo" prefWidth="101.5999755859375" text="Tempo" />
         <TableColumn fx:id="colAcoes" prefWidth="70.0" text="Ações" />
        </columns>
    </TableView>

    <Button onAction="#carregarListaProcedimentos" text="Atualizar Lista" />
</VBox>
