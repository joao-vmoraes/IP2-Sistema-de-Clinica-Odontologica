<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="clinica.view.UIController.DentistaListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Lista de Dentistas" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <!-- ÁREA DE FILTROS -->
    <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-background-radius: 5;">
        <children>
            <VBox spacing="5.0">
                <children>
                    <Label text="Filtrar por CPF:" />
                    <TextField fx:id="txtFiltroCpf" promptText="Digite o CPF..." />
                </children>
            </VBox>

            <VBox spacing="5.0">
                <children>
                    <Label text="Disponível no Horário:" />
                    <ComboBox fx:id="comboFiltroHorario" prefWidth="150.0" promptText="Selecione..." />
                </children>
            </VBox>

            <Button mnemonicParsing="false" onAction="#aplicarFiltros" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Filtrar">
                <HBox.margin>
                    <Insets top="20.0" />
                </HBox.margin>
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>

            <Button mnemonicParsing="false" onAction="#limparFiltros" prefHeight="25.0" prefWidth="100.0" text="Limpar">
                <HBox.margin>
                    <Insets top="20.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>

    <TableView fx:id="tableViewDentistas" prefHeight="400.0" prefWidth="800.0">
        <columns>
            <TableColumn fx:id="colNome" prefWidth="150.0" text="Nome" />
            <TableColumn fx:id="colCpf" prefWidth="120.0" text="CPF" />
            <TableColumn fx:id="colEspecialidade" prefWidth="150.0" text="Especialidade" />
            <TableColumn fx:id="colTelefone" prefWidth="120.0" text="Telefone" />
            <TableColumn fx:id="colExpediente" prefWidth="111.20001220703125" text="Expediente" />
         <TableColumn fx:id="colFolgas" prefWidth="108.0" text="Dias de folga" />
         <TableColumn fx:id="colAcoes" prefWidth="70.0" text="Ações" />
        </columns>
    </TableView>

    <Label text="* Nota: O filtro de horário verifica apenas o expediente do dentista, não seus agendamentos." textFill="#7f8c8d">
        <font>
            <Font size="11.0" />
        </font>
    </Label>
</VBox>
